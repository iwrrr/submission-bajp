<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Submission" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/lightGray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="Typography">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="Typography.SectionTitle" parent="Typography">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Typography.Title" parent="Typography">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Typography.Body1" parent="Typography">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Typography.Body2" parent="Typography.Body1">
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="Typography.Body3" parent="Typography.Body2">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RatingBar">
        <item name="colorControlActivated">@color/teal_200</item>
    </style>

    <style name="TabTextAppearance" parent="Typography">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>